<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			android:background="@color/colorWhite">

	<ImageView
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:id="@+id/imageView2"
			android:src="@drawable/cho3"
			android:maxHeight="80dp" android:maxWidth="80dp" android:longClickable="false"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Large Text"
			android:id="@+id/textView2"
			android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/textView3"
			android:layout_toStartOf="@+id/textView3" android:layout_marginRight="53dp"
			android:layout_marginEnd="53dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="price"
			android:id="@+id/textView3" android:layout_alignBottom="@+id/imageView2"
			android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
			android:textColor="@color/colorRed"/>

</RelativeLayout>
